    "@core": "./core/mod.ts",
    "@globals/magic-values": "../../magic-values.ts",
    "#std/assert": "jsr:@std/assert@1",
    "#std/testing/mock": "jsr:@std/testing/mock@1",
    "#std/async": "jsr:@std/async@1",
    "#std/events": "jsr:@std/events@1/mod",
    "#std/streams": "jsr:@std/streams@1"
  },
  "fmt": {
    "options": {
      "useSingleQuote": true
    }
  }
