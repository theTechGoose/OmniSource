{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "tasks": {
    "ai_conf:dev": "cd ./backends/ai-confirmations && deno task dev",
    "bdm": "deno -A ./scripts/create-registry-for-backend/mod.ts",
    "serve:backend": "deno -A ./scripts/denomite-serve/mod.ts"
  },
  "lint": {
    "rules": {
      "exclude": ["verbatim-module-syntax", "no-prototype-builtins", "ban-types"]
    }
  },
  "imports": {
    "@global_models": "./models/mod.d.ts",
    "@std/assert": "jsr:@std/assert@1",
    "@std/mock": "jsr:@std/testing/mock"
  },
  "workspace": ["shared/denomite", "shared/utilities", "backends/ai-confirmations", "backends/ai-activations", "models", "scripts"]
}
