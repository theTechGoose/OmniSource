{
  "compilerOptions": {

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "tasks": {
    "ai_conf:dev": "cd ./backends/ai-confirmations && deno task dev",
    "bdm": "deno -A ./scripts/create-registry-for-backend/mod.ts",
    "prod": "deno -A ./scripts/prod.ts",
    "serve:backend": "deno -A ./scripts/denomite-serve/mod.ts"
  },
  "lint": {
    "rules": {
      "exclude": [
        "verbatim-module-syntax",
        "no-prototype-builtins",
        "ban-types",
        "import-map-remap"
      ]
    }
  },
  "imports": {
    "@global_models": "./models/mod.d.ts",
    "@std/assert": "jsr:@std/assert@1",
    "@std/mock": "jsr:@std/testing/mock",
    "#std": "jsr:@libs/std@^2024.10.5",
    "#nanoid": "npm:nanoid@5.0.7",
    "#oak": "jsr:@oak/oak@16.1.0",
    "#axios": "npm:axios",
    "#zod": "npm:zod",
    "#glob": "npm:glob"
  },
  "workspace": [
    "shared/denomite",
    "shared/utilities",
    "shared/scripts",
    "backends/ai-confirmations",
    "backends/ai-activations",
    "scripts",
    "backends/local-server"
  ]
}
